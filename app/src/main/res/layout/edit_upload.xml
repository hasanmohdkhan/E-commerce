<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/ed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="text"
            android:layout_margin="@dimen/dimens_32dp"/>

        <EditText
            android:layout_below="@+id/ed_title"
            android:id="@+id/ed_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="price"
            android:layout_margin="@dimen/dimens_32dp"/>

        <EditText
            android:layout_below="@+id/ed_price"
            android:id="@+id/ed_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Int"
            android:layout_margin="@dimen/dimens_32dp"/>

        <Button
            android:id="@+id/add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_image"
            android:text="Upload Image"/>

        <ImageView
            android:id="@+id/preview"
            android:layout_below="@id/ed_image"
            android:layout_toRightOf="@+id/add_image"
            android:layout_width="50dp"
            android:layout_marginStart="50dp"
            android:layout_height="50dp"
            android:src="@color/ColorBlack"
            android:layout_toEndOf="@+id/add_image"
            android:layout_marginLeft="50dp" />


        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_below="@id/add_image"/>

    </RelativeLayout>

</LinearLayout>